<%- include("../partials/header.ejs") %>
<!-- Navigation -->
<div
  class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-dark shadow-sm"
>
  <h5 class="my-0 mr-md-auto font-weight-normal">
    <a href="/">
      <img
        class="img-fluid logo"
        src="/images/logo-horizontal.png"
        alt="Pizza Planet"
      />
    </a>
  </h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <a class="btn btn-danger p-2 text-white" href="/"
      ><i class="fas fa-pizza-slice"></i> Menu</a
    >
  </nav>
</div>
<!-- END Navigation -->

<!-- Main -->
<div class="main">
  <div class="container mt-5">
    <div class="row">
      <h1>Orders</h1>

      <div class="container">
        <div class="row">
          <p class="lead"></p>
          <div class="container">
            <div class="row">
              <table class="table table-striped table-dark">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Order ID</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Order Total</th>
                    <th scope="col">Order Details</th>
                  </tr>
                </thead>
                <tbody>
                  <% orders.forEach(order => { %>
                  <tr>
                    <th scope="row" id="order_counter">1</th>
                    <td><%= order._id %></td>
                    <td><%= order.createdAt %></td>
                    <td>$<%= order.price %>.00</td>
                    <td>
                      <a href="/orders/<%= order._id %>"
                        ><i class="fas fa-eye"></i> View Order</a
                      >
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <!-- END Main -->

        <%- include("../partials/footer.ejs") %>
      </div>
    </div>
  </div>
</div>
