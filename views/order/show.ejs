<%- include("../partials/header.ejs") %>

<main role="main" class="inner cover">
  <div class="container mt-5">
    <div class="row">
      <div class="lead">
        <h1>Order Details</h1>
        <h6 class="border-bottom">
          Order ID:<span class="text-white"> <%= order._id %></span>
        </h6>
        <div class="container">
          <div class="row">
            <div class="col">
              <div class="badge badge-danger text-wrap text-right mb-4 mt-2">
                Pizza Size
              </div>
              <span class="font-weight-bolder text-white"
                ><%= order.size %></span
              >
            </div>
            <div class="col">
              <div
                class="badge badge-danger text-wrap text-right mb-4 mt-2"
                style="width: 6rem"
              >
                Crust
              </div>
              <span class="font-weight-bolder text-white"
                ><%= order.crust %></span
              >
            </div>
            <div class="w-100"></div>
            <div class="col">
              <div
                class="badge badge-danger text-wrap text-right mb-4 mt-2"
                style="width: 6rem"
              >
                Sauce
              </div>
              <span class="font-weight-bolder text-white"
                ><%= order.sauce %></span
              >
            </div>
            <div class="col">
              <div
                class="badge badge-danger text-wrap text-right mb-4 mt-2"
                style="width: 6rem"
              >
                Cheese
              </div>
              <span class="font-weight-bolder text-white"
                ><%= order.cheese %></span
              >
            </div>
            <div class="w-100"></div>
            <div class="col">
              <div
                class="badge badge-danger text-wrap text-right mb-4 mt-2"
                style="width: 6rem"
              >
                Meat Toppings
              </div>
              <span class="font-weight-bolder text-white"
                ><%= order.toppingsMeat %></span
              >
            </div>
            <div class="col">
              <div
                class="badge badge-danger text-wrap text-right mb-4 mt-2"
                style="width: 6rem"
              >
                Veggie Toppings
              </div>
              <span class="font-weight-bolder text-white"
                ><%= order.toppingsVeggie %></span
              >
            </div>
          </div>
        </div>
        <h6 class="border-bottom text-white">Total</h6>
        <h3 class="mt-3 mb-5">$<%= order.price %>.00</h3>
        <a class="btn btn-danger" href="/orders"
          ><i class="fas fa-angle-left mr-2"></i> Back to Orders</a
        >
      </div>
    </div>
  </div>
</main>
